<Window x:Class="CarShop.MainCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:CarShop"
                xmlns:p="clr-namespace:CarShop.Properties"

        mc:Ignorable="d"
        Title="ShowCarWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="CarShopBackground.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button Name="btnShowCars" FontSize="20" Content="Автомобілі" HorizontalAlignment="Left" Margin="107,202,0,0" VerticalAlignment="Top" Width="242" Height="37" Click="BtnShowCars_Click"/>
        <Button x:Name="btnAddNewCar" FontSize="15"  Content="Добавити новий автомобіль" Click="BtnAddNewCar_Click" HorizontalAlignment="Left" Margin="445,202,0,0" VerticalAlignment="Top" Width="242" Height="37"/>
    </Grid>
</Window>
