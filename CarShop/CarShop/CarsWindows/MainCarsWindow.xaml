<Window x:Class="CarShop.MainCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:CarShop"
                xmlns:p="clr-namespace:CarShop.Properties"

        mc:Ignorable="d"
        Title="ShowCarWindow" Height="450" Width="800">
    <Grid>
        <Button Name="btnShowCars" FontSize="20" Content="Автомобілі" HorizontalAlignment="Left" Margin="20,115,0,0" VerticalAlignment="Top" Width="242" Height="37" Click="BtnShowCars_Click"/>
        <Button x:Name="btnAddNewCar" FontSize="15"  Content="Добавити новий автомобіль" Click="BtnAddNewCar_Click" HorizontalAlignment="Left" Margin="20,157,0,0" VerticalAlignment="Top" Width="242" Height="37"/>

        <Button x:Name="btnAddMake"  Content="{x:Static  p:Resources.btnAddMake}" HorizontalAlignment="Left" Margin="349,19,0,0" VerticalAlignment="Top" Width="175" Height="37" Click="BtnAddMake_Click"/>
        <Button x:Name="btnAddModel" Content="{x:Static  p:Resources.btnAddModel}"  HorizontalAlignment="Left" Margin="549,19,0,0" VerticalAlignment="Top" Width="154" Height="37" Click="BtnAddModel_Click"/>
    </Grid>
</Window>
